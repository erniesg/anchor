{
  "name": "anchor",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered caregiving coordination platform",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @anchor/database db:generate",
    "db:migrate:dev": "pnpm --filter @anchor/database db:migrate:dev",
    "db:migrate:prod": "pnpm --filter @anchor/database db:migrate:prod",
    "db:studio": "pnpm --filter @anchor/database db:studio",
    "db:seed": "pnpm --filter @anchor/database db:seed",
    "deploy:dev": "turbo run deploy:dev",
    "deploy:prod": "turbo run deploy:prod",
    "setup:cloudflare": "node scripts/setup-cloudflare.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}