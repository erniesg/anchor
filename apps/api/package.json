{
  "name": "@anchor/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml --remote",
    "build": "tsc && esbuild src/index.ts --bundle --outdir=dist --format=esm --external:crypto --external:stream --external:util",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src/"
  },
  "dependencies": {
    "@anchor/database": "workspace:*",
    "@anchor/shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "better-sqlite3": "^12.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.39.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.97.0"
  }
}